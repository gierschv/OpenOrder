{
    "apiVersion": "0.1",
    "swaggerVersion": "1.1",
    "basePath": "http://localhost:8081/api",
    "resourcePath": "/step",
    "apis": [
        {
            "path": "/auth",
            "description": "Authentificate user",
            "operations": [
                {
                    "httpMethod": "GET",
                    "summary": "Authentificate an user using FB authentification",
                    "responseClass": "User",
                    "nickname": "authUser",
                    "parameters": [
                        {
                            "name": "accessToken",
                            "description": "Facebook OAuth access token",
                            "paramType": "query",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        },
                        {
                            "name": "userID",
                            "description": "Facebook user ID",
                            "paramType": "query",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "int"
                        }
                        ,
                        {
                            "name": "signedRequest",
                            "description": "A Facebook signed request",
                            "paramType": "query",
                            "required": true,
                            "allowMultiple": false,
                            "dataType": "string"
                        }
                    ],
                    "errorResponses": [
                        {
                            "code": 400,
                            "reason": "Bad parameters"
                        },
                        {
                            "code": 403,
                            "reason": "Unable to authentificate user"
                        }
                    ]
                }
            ]
        }
    ],
    "models": {
        "User": {
            "id": "User",
            "properties": {
                "uid": {
                    "type": "int"
                },
                "api_key": {
                    "type": "string"
                },
                "access_token": {
                    "type": "string"
                },
                "first_name": {
                    "type": "string"
                },
                "last_name": {
                    "type": "string"
                },
                "active": {
                    "type": "bool"
                },
                "admin": {
                    "type": "bool"
                }
            }
        }
    }
}